public static void main(String args[]) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Welcome to Bandar Sunway!");
		System.out.println("Do you want to sign up or login (Sign up-1)/(Login-2)");
		int option = scan.nextInt();
		while((option > 2) || (option < 1)) {
	        System.out.println("ERROR Please enter a valid input!!");
	        System.out.println("Do you want to sign up or login (Sign up-1)/(Login-2)");
	        option = scan.nextInt();
		}
		if (option == 1) {
			System.out.println("Name:");
			String name = scan.next();
			System.out.println("IC/Passport:");
			String IC = scan.next();
			System.out.println("Birthday:");
			String birth = scan.next();
			System.out.println("Gender(Male-1)/(Female-2):");
			int gend = scan.nextInt();
			System.out.println("Email:");
			String Email = scan.next();
			System.out.println("Your name is "+ name);
			System.out.println("Your IC/Passport is "+IC);
			System.out.println("Your birthday is " +birth);
			if (gend == 1) {
			System.out.println("Your gender is Male.");
			} else if ( gend == 2) {
				System.out.println("Your gender is Female.");
			}
			System.out.println("The email used to Sign up upon registration is "+Email);
			
	}else if (option == 2) {
		System.out.println("Email:");
		String Email = scan.next();
		System.out.println("Password:");
		String pass = scan.next();
		
	}
}
}
